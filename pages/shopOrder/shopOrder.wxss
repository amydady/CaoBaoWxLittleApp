/* pages/order/index.wxss */
.scroll-view-x{
  background-color: #fff;
  white-space: nowrap;
  color: #353535;
  font-size: 14px;
  height: 42px;
}

.scroll-view-x .scroll-view-item{
  display:inline-block;
  width: 25%;
  height: 42px;
  box-sizing: border-box;
}

.scroll-view-item>view{
 display: inline-block;
 width: 100%;
 height: 42px;
 line-height: 42px;
 text-align: center;
}

.scroll-view-item .on{
  height: 40px;
  color:#5cb85c;
  font-weight:bold;
  border-bottom: solid 2px #5cb85c;
}

.scroll-view-item_H{
  background-color: #f8f8f8;
  width: 100%;
  box-sizing: border-box;
  padding: 5px;
  height: 106px;
  border-bottom: solid 1px #e7e7e2
}

.scroll-view-item_H image {
  display: inline-block;
  width: 95px;
  height: 95px;
  margin-right: 10px;
}
.item{
  display:inline-block;
  width: 476rpx;
}
.item-name{
  font-size: 16px;
  color: #353535;
  margin-bottom:47px;
}
.item-price{
  color: #353535;
  font-size: 14px;
}
.money{
  margin-top:15px;
  display: block;
  height: 20px;
  line-height: 20px;
  width: 100%;
}

.money text{
  font-size:14px;
}

.money-type {
  float: left;
  color:#888;
}

.money-price{
  float: right;
  color:#888;
}

.cart-count-num{
  display: inline-block;
  width: 80%;
  color: #353535;
  font-size: 14px;
}

.start-time{
  margin-top: 15px;
  font-size: 14px;
  color: #888;

}