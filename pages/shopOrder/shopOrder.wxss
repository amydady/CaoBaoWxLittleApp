/* pages/order/index.wxss */
.scroll-view-x{
  background-color: #fff;
  white-space: nowrap;
  color: #353535;
  font-size: 14px;
  height: 42px;
  margin-bottom: 10px;
}

.scroll-view-x .scroll-view-item{
  display:inline-block;
  width: 25%;
  height: 42px;
  box-sizing: border-box;
}

.scroll-view-item>view{
 display: inline-block;
 width: 100%;
 height: 42px;
 line-height: 42px;
 text-align: center;
}

.scroll-view-item .on{
  height: 40px;
  color:#5cb85c;
  font-weight:bold;
  border-bottom: solid 2px #5cb85c;
}

.scroll-view-item_H{
  background-color: #f8f8f8;
  width: 100%;
  box-sizing: border-box;
  padding: 5px 10px;
  height: 108px;
  border-bottom: solid 1px #e7e7e2
}

.scroll-view-item_H image {
  display: inline-block;
  width: 190rpx;
  height: 190rpx;
  margin-right: 10px;
}
.item{
  vertical-align: top;
  display:inline-block;
  width: 490rpx;
}
.item-name{
  font-size: 14px;
  color: #353535;
  margin-bottom:8px;
}
.item-price{
  color: #888;
  font-size: 12px;
}
.money{
  display: block;
  width: 100%;
}

.money text{
  font-size:12px;
   color:#888;
}

.start-time{
  margin-top: 5px;
  font-size: 12px;
  color: #888;
}