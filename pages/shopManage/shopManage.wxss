@import '../common/common.wxss';

.shop .shopTopic image{
    width : 200rpx;
    height : 200rpx;
    float:left;
    margin-right: 10px;
}
.shop .shopTopic {
    width : 100%;
    height : 240rpx;
    padding:10px;
    box-sizing: border-box;
    border-bottom:solid 1px #e7e2e2;

}
.shop-name{
  font-size: 16px;
  color: #353535;
  font-weight:bold;
}

.productTitle{
  width: 100%;
  height: 32px;
  margin-top: 5px;
}

.shop .productTitle>view{
    width: 50%;
    display: inline-block;
    box-sizing: border-box;
    text-align: center;
    height: 100%;
    font-size: 16px;
}

.productTitle span{
  display: inline-block;
  height: 32px;
  line-height: 32px;
}
.on span{
     color:#10AEFF;
     font-weight:bold;
     border-bottom: solid 2px #10AEFF;
}