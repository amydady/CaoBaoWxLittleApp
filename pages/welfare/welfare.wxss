@import '../common/common.wxss';

.welfare .title{
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: left;
  font-size:18px;
  font-weight: bold;
  border-left:solid 4px #10AEFF;
  padding-left:10px;
}

.welfare form{
  padding:5px 15px;
  display: block;
}

.welfare form>view{
  width: 100%;
}

.inputName{
  font-size: 16px;
  color: #000000;
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: solid 1px #e7e2e2;
  vertical-align:bottom;
  width: 17%;
}

.welfare form input {
  font-size: 16px;
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: solid 1px #e7e2e2;
  vertical-align:bottom;
  width: 83%;
  color: #000000;
}

.welfare form button{
  margin: 20px 0;
}

.table-box{
  width: 100%;
  min-height: 100px;
  box-sizing:border-box;
  padding:15px 10px;

}

.table-box table {
  display: block;
  height: 100%;
  width: 100%;
}

table tr {
   display:block;
   width: 100%; 
   border: solid 1px #e7e2e2;
}

table tr th{
  display: inline-block;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  text-align: center;
  width: 50%;
  color:#353535;
  box-sizing: border-box;
}

table tr td{
   display: inline-block;
   width: 50%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #888888;
  font-size: 14px;
  box-sizing: border-box;
}