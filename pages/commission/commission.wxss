@import '../common/common.wxss';

.funs .funsTopic {
  width: 100%;
  box-sizing: border-box;
  font-size: 14px;
  color: #353535;
  line-height: 28px;
  padding: 10px;
  border-bottom: solid 1px #e2e2e2;
}

.funsTitle {
  width: 100%;
  height: 32px;
  margin-top: 10px;
}

.funsTitle>view {
  width: 100%;
  display: inline-block;
  box-sizing: border-box;
  text-align: left;
  height: 100%;
  font-size: 16px;
  margin-left: 10px;
}

.funsTitle span {
  display: inline-block;
  height: 32px;
  line-height: 32px;
}

span.on {
  color: #10aeff;
  font-weight: bold;
  border-bottom: solid 2px #10aeff;
}

.applyHistory {
  width: 100%;
  display: inline-block;
  height: 32px;
  line-height: 32px;
  border-bottom: solid 1px #e2e2e2;
  margin-top: 10px;
  margin-left: 10px;
}
