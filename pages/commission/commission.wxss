@import '../common/common.wxss';

.funs .funsTopic {
    width : 100%;
    box-sizing: border-box;
    font-size:14px;
    color:#353535;
    line-height:28px;
    padding:10px;
    border-bottom: solid 1px #e2e2e2;
}

.funsTitle{
  width: 100%;
  height: 32px;
  margin-top: 10px;
}

.funsTitle>view{
    width: 50%;
    display: inline-block;
    box-sizing: border-box;
    text-align: center;
    height: 100%;
    font-size: 16px;
}

.funsTitle span{
  display: inline-block;
  height: 32px;
  line-height: 32px;
}
span.on {
     color:#10AEFF;
     font-weight:bold;
     border-bottom: solid 2px #10AEFF;
}