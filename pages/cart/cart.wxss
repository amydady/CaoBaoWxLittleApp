@import '../common/common.wxss';

.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 10rpx 20rpx 10rpx 250rpx;
    height: 165rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 70rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width:70px;
    height: 70px;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-size: 16px;
    color: #353535;
}
.cart-list .cart-pro-price{
    display: inline-block;
    position: absolute;
    bottom: 3px;
    right: 20rpx;
    height: 40px;
    line-height:40px;
    color:#e64340;
    font-size:16px;
}
.cart-list .cart-count-box{
    position: absolute;
    left: 285;
    bottom: 10px;
    width: 256rpx;
    height: 25px;
    font-size: 16px;
   border:solid 0.5px #e7e2e2;
   box-sizing: border-box;
}
.cart-list .cart-count-box text{
    display: inline-block;
    height: 100%;
    line-height: 22px;
    text-align: center;
    box-sizing: border-box;
}
.cart-count-add{
  border-left: solid 0.5px #e7e2e2;
}
.cart-count-down{
 border-right: solid 0.5px #e7e2e2;
}
.cart-count-down,.cart-count-add{
    font-size: 40rpx;
    width: 50rpx;
}
.cart-count-num{
    width: 150rpx;
}
.cart-del{
    font-size: 44rpx;
    float: right;
    margin-top: -5rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 80rpx 0 80rpx;
    box-sizing: border-box;
    background: #AB956D;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
    font-size: 14pt;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 45rpx;
  height: 45rpx;
}
.cart-toatl-price{
    float: right;
    width: 270rpx;
    font-size: 14pt;
    text-align: right;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}